<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.University_coursework" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/buttonColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/mid_gray</item>

        <!-- Customize your theme here. -->

        <!-- Убрать название проекта -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Убрать статус бар вверху проекта -->
    <style name="Theme.YourApp" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <!-- Стиль для кастомной закруглённой кнопки -->
    <style name="MyRoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">32dp</item>
        <item name="backgroundTint">@color/buttonColor</item>
    </style>

    <style name="MyRoundedButtonGray" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <!-- Стиль для кастомной круглой аватарки -->
    <style name="myCircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



</resources>